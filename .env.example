# SGICS - Configuración de Variables de Entorno
# Copia este archivo como .env y completa los valores según tu ambiente

# ===================================
# CONFIGURACIÓN DE DJANGO
# ===================================

# Clave secreta de Django - GENERAR UNA NUEVA EN PRODUCCIÓN
# Puedes generar una nueva con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production-environment

# Modo debug - True para desarrollo, False para producción  
DEBUG=True

# Hosts permitidos separados por coma
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===================================
# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# ===================================

# Nombre de la base de datos
DB_NAME=sgics_dev

# Usuario de MySQL
DB_USER=sgics_user

# Contraseña del usuario MySQL
DB_PASSWORD=sgics_pass

# Host de MySQL (localhost para desarrollo local, db para Docker)
DB_HOST=localhost

# Puerto de MySQL
DB_PORT=3306

# ===================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# ===================================

# Host de Redis para cache y Celery
REDIS_HOST=localhost

# Puerto de Redis  
REDIS_PORT=6379

# Base de datos Redis (0-15)
REDIS_DB=0

# ===================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ===================================

# Backend de email para desarrollo
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Para producción usar SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=tu-email@gmail.com
# EMAIL_HOST_PASSWORD=tu-contraseña-de-aplicacion

# ===================================
# CONFIGURACIÓN DE ARCHIVOS
# ===================================

# Tamaño máximo de archivos subidos (en bytes)
# 10MB = 10 * 1024 * 1024 = 10485760
FILE_UPLOAD_MAX_SIZE=10485760

# ===================================
# CONFIGURACIÓN DE DESARROLLO
# ===================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG

# ===================================
# CONFIGURACIÓN FRONTEND
# ===================================

# URL del backend API (para el frontend)
VITE_API_URL=http://localhost:8000

# ===================================
# NOTAS IMPORTANTES
# ===================================

# 1. NUNCA subir este archivo .env al repositorio Git
# 2. Cada ambiente (dev, staging, prod) debe tener su propio .env
# 3. En producción, usar variables de entorno del sistema en lugar de archivo .env
# 4. Cambiar todas las contraseñas y claves secretas en producción
# 5. Usar HTTPS en producción (SSL/TLS)

# ===================================
# COMANDOS ÚTILES
# ===================================

# Crear base de datos MySQL:
# CREATE DATABASE sgics_dev CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
# CREATE USER 'sgics_user'@'localhost' IDENTIFIED BY 'sgics_pass';
# GRANT ALL PRIVILEGES ON sgics_dev.* TO 'sgics_user'@'localhost';
# FLUSH PRIVILEGES;

# Aplicar migraciones:
# python manage.py makemigrations
# python manage.py migrate

# Crear superusuario:
# python manage.py createsuperuser

# Instalar dependencias backend:
# pip install -r requirements.txt

# Instalar dependencias frontend:
# cd frontend && npm install